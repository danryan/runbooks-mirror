{
  "trigger": {
    "schedule": {
      "interval": "5m"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [
          "pubsub-rails-inf-gprd-*"
        ],
        "types": [],
        "body": {
          "query": {
            "bool": {
              "must": [
                {
                  "match_phrase": {
                    "json.params.value": "\"access_level=>admin\""
                  }
                },
                {
                  "match": {
                    "json.method": "POST"
                  }
                },
                {
                  "match": {
                    "json.status": "302"
                  }
                },
                {
                  "range": {
                    "@timestamp": {
                      "gte": "now-5m",
                      "lte": "now"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gt": 0
      }
    }
  },
  "actions": {
    "notify-slack": {
      "throttle_period": "6s",
      "slack": {
        "message": {
          "from": "ElasticCloud Watcher: gitlab_admin_created",
          "to": [
            "#sec-appsec-private"
          ],
          "text": "A GitLab account has been created with `Admin` privilege.\n\nURL: {{ctx.payload.hits.hits.0._source.json.location}}\n\nCreated by: `{{ctx.payload.hits.hits.0._source.json.username}}`\n\n\nFull Message Trace: ```{{ctx.payload.hits.hits.0._source.message}}```"
        }
      }
    }
  }
}
