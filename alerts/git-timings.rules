ALERT BlackBoxGitPullHttps
  IF (max(git_pull_seconds{tier="blackbox",transport="https"})) > 15 
  FOR 15s
  LABELS {severity="warn"}
  ANNOTATIONS {
    title="BlackBox git pulls over https are taking too long.",
    description="The Prometheus git blackbox exporter is reporting that git pulls are taking longer than normal.",
    runbook="troubleshooting/git-blackbox-exporter.md"
  }
