ALERT HawaiianHugs15
  IF node_load1{environment="prd", type="git", job="node"} > 1
  FOR 1m
  LABELS {severity="critical"}
  ANNOTATIONS {
    title="This is the git nodes doing things",
    description="This one we should really worry about, really... it's git",
    node_load="{{ $value }}",
  }

ALERT HawaiianHugs16
  IF node_load1{environment="prd", type="api", job="node"} > 1
  FOR 1m
  LABELS {severity="warn"}
  ANNOTATIONS {
    title="This is the API servers doing work",
    description="Nothing to worry about, at least not too much",
    node_load="{{ $value }}",
  }
