gitlab:disk_available=node_filesystem_avail{job="base-debian", fstype=~"(nfs.*|xfs)"} / node_filesystem_size{job="base-debian", fstype=~"(nfs.*|xfs)"} * 100

ALERT worker_10_disk
  IF gitlab:disk_available <= 10
  FOR 1m
  LABELS { severity = "critical" }
  ANNOTATIONS {
    title = "Really low disk space left on {{ $labels.mountpoint }} on {{ $labels.fqdn }}: {{ $value | printf \"%.2f\" }}%",
    description = "Consider sshing into the instance and removing old logs or clean temp files following the linked runbook. For status check http://performance.gitlab.net/dashboard/db/fleet-overview",
    runbook="troubleshooting/filesystem_alerts.md"
  }
