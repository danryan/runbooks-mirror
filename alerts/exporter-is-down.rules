## Exporter is down
ALERT exporter_is_down
  IF up{instance!~"ebs|license|lb1|dev|aptly|packages|version|backend1"} == 0
  FOR 1m
  LABELS {severity="critical", pager="slack", channel="infrastructure"}
  ANNOTATIONS {
    title="{{ range .Alerts }}{{ .Labels.job }}/{{ .Labels.instance }} {{ end }} failed being scrapped for the last minute",
    description="Check prometheus exporters for the following job/instances: {{ range .Alerts }}{{ .Labels.job }}/{{ .Labels.instance }} {{ end }}. You can check details on page https://prometheus.gitlab.com/targets",
    runbook="https://prometheus.gitlab.com/targets"
  }
